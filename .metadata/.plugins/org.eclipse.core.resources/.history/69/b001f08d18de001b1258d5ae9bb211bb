package javaMethods;

public class MethodBasics {
	
	public static boolean isPrime(int n) {
		boolean flag = true;
		
		if(n <= 2 && n > 0)
			return true;
		
		for(int i = 2; i <= n/2; i++) {
			if(n % i == 0) {
				flag = false;
				break;
			}
			
		}
		
		return flag;
	}
	
	public static int findHCF(int num1, int num2) {
		while(num1 != num2) {
			if(num1 > num2) {
				num1 -= num2;
			}
			else {
				num2 -= num1;
			}
		}
		
		return num1;
	}
	
	public static void main(String[] args) {
		System.out.println("Is 19 Prime" + MethodBasics.isPrime(19));
		System.out.println("HCF of 25 and 15 is: " + MethodBasics.findHCF(25, 15));
	}
}
