package javaMethods;

public class MethodBasics {
	
	public static boolean isPrime(int n) {
		boolean flag = true;
		
		if(n <= 2 && n > 0)
			return true;
		
		for(int i = 2; i <= n/2; i++) {
			if(n % i == 0) {
				flag = false;
				break;
			}
			
		}
		
		return flag;
	}
	
	public static int findHCF(int num1, int num2) {
		while(num1 != num2) {
			if(num1 > num2) {
				num1 -= num2;
			}
			else {
				num2 -= num1;
			}
		}
		
		return num1;
	}
	
	
	/* Variable arguments */
	public static void show(int ...args) {
		for(int value : args) {
			System.out.println(value);
		}
	}
	
	public static void main(String[] args) {
		int prime = 19, num1 = 25, num2 = 15, hcf;
		System.out.printf("Is %d Prime Number: %b %n",  MethodBasics.isPrime(prime));
		hcf = MethodBasics.findHCF(num1, num2);
		System.out.printf("HCF of %d and %d is: %d %n", num1, num2, hcf );
	}
}
